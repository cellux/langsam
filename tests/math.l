(assert (= (+ 2 3) 5))
(assert (= (- 7 4) 3))
(assert (= (* 7 4) 28))
(assert (= (/ 28 4) 7))
(assert (= (/ 29 4) 7))
(assert (= (/ -29 4) -7))

(assert (= 0.0 0.0))

(assert (= (* 5 0.0) 0))
(assert (= (* 5.0 0.0) 0.0))
(assert (= (* 5.0 0) 0.0))

(assert (= (mod 25 7) 4))
(assert (= (mod 25.125 7) 4.125))

(assert (= (nonzero? 0) false))
(assert (= (nonzero? 1) true))
(assert (= (nonzero? -1) true))
(assert (= (nonzero? 0.0) false))
(assert (= (nonzero? -1.0) true))

(assert (= (zero? 0) true))
(assert (= (zero? 0.0) true))
(assert (= (zero? 1) false))
(assert (= (zero? :x) false))

(assert (= (pos? 0) false))
(assert (= (pos? 1) true))
(assert (= (pos? 1.0) true))
(assert (= (pos? -1) false))
(assert (= (pos? :x) false))

(assert (= (neg? 0) false))
(assert (= (neg? -1) true))
(assert (= (neg? -1.0) true))
(assert (= (neg? 1) false))
(assert (= (neg? :x) false))

(assert (= (bit-and 0xF3 0x3C) 0x30))
(assert (= (bit-and 0xFF 0x0F 0x03) 0x03))
(assert (= (bit-or 0xF0 0x0F) 0xFF))
(assert (= (bit-or 0x10 0x01 0x02) 0x13))

(assert (= (bit-shift-left 3 4) 48))
(assert (= (bit-shift-left 0x12 0) 0x12))
(assert (= (bit-shift-right 0x1234 8) 0x12))
(assert (= (bit-shift-right 0x12 0) 0x12))

(assert (= (min 5) 5))
(assert (= (min 7 3 8 -2 9) -2))
(assert (= (max 5) 5))
(assert (= (max 7 3 8 -2 9) 9))
(assert (throws? '(min . "min expects at least one argument") (min)))
(assert (throws? '(max . "max expects at least one argument") (max)))

(assert (throws? '(type . "argument y is Float, expected Integer")
                 (bit-and 3 1.0)))
(assert (throws? '(type . "argument x is Float, expected Integer")
                 (bit-and 3.0 1)))
(assert (throws? '(type . "argument y is Float, expected Integer")
                 (bit-or 3 1.0)))
(assert (throws? '(type . "argument x is Float, expected Integer")
                 (bit-or 3.0 1)))
(assert (throws? '(bit-shift-left . "shift must be non-negative Integer")
                 (bit-shift-left 3 -1)))
(assert (throws? '(bit-shift-right . "shift must be non-negative Integer")
                 (bit-shift-right 3 -1)))
(assert (throws? '(type . "argument shift is Float, expected Integer")
                 (bit-shift-left 3 1.0)))
(assert (throws? '(type . "argument x is Float, expected Integer")
                 (bit-shift-left 3.0 1)))
(assert (throws? '(type . "argument x is Float, expected Integer")
                 (bit-shift-right 3.0 1)))
